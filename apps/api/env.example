# ===========================================
# RUNIC PROTOCOL - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and configure your settings

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/runic_protocol?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# CORS - Comma-separated list of allowed origins (use * for development only)
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Auction settings (milliseconds)
AUCTION_WINDOW_MS=15000

# ===========================================
# SOLANA CONFIGURATION
# ===========================================

# RPC Endpoint
# For devnet: https://api.devnet.solana.com
# For mainnet: https://api.mainnet-beta.solana.com
# Recommended: Use a dedicated RPC provider (Helius, QuickNode, etc.)
SOLANA_RPC_URL="https://api.devnet.solana.com"

# Network: mainnet-beta, devnet, or testnet
SOLANA_NETWORK="devnet"

# ===========================================
# REAL TRANSACTIONS (Production)
# ===========================================

# Set to "true" to enable REAL Solana transactions
# WARNING: This will send actual tokens!
SOLANA_REAL_TRANSACTIONS=false

# Treasury wallet private key (REQUIRED for real transactions)
# Can be base58 encoded or JSON array format
# Generate with: solana-keygen new --outfile treasury.json
# Then convert: cat treasury.json (use the array)
# Or use: solana-keygen pubkey treasury.json (shows public key for funding)
SOLANA_TREASURY_PRIVATE_KEY=""

# ===========================================
# PRODUCTION CHECKLIST
# ===========================================
# 1. Set SOLANA_NETWORK to "mainnet-beta"
# 2. Set SOLANA_RPC_URL to a reliable mainnet RPC
# 3. Generate a treasury keypair and fund it
# 4. Set SOLANA_TREASURY_PRIVATE_KEY
# 5. Set SOLANA_REAL_TRANSACTIONS=true
# 6. Set a strong JWT_SECRET
# 7. Use a production PostgreSQL database
